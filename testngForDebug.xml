<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="No"/>
    <parameter name="testRailRunName" value="Scheduling OP Enabled Regression"/>
    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>

    <test name="Prepare Settings Test">
        <classes>
            <class name="com.legion.tests.core.PrepareSettingsTest">
                <methods>
                    <include name="prepareSettingsInOPTemplateAsInternalAdmin"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="Consolidating Filters Test">
        <classes>
            <class name="com.legion.tests.core.ConsolidatingFiltersTest">
                <methods>
                    <include name="verifyShiftTypeContentInFilterWithoutLGAsInternalAdmin" />
                    <include name="verifyComplianceReviewInWeekViewAndDayViewAsInternalAdmin" />
                    <include name="verifyActionRequiredInWeekViewAndDayViewAsInternalAdmin" />
                    <include name="verifyShiftTypeContentInFilterWithoutLGAsInternalAdmin" />
                    <!--                    <include name="verifyComplianceReviewWithLGAsInternalAdmin" /> LG cannot be generated -->
                </methods>
            </class>
        </classes>
    </test>

    <test name="Schedule Copy Improvement Test">
        <classes>
            <class name="com.legion.tests.core.ScheduleCopyImprovementTest">
                <methods>
                    <include name="validateTheUnassignedShiftsConvertToOpenShiftsSettingInOPAsInternalAdmin" />
                    <include name="validateShiftsWithConvertToOpenShiftsWhenGeneratingScheduleSettingAsKeepAsUnassignedAsInternalAdmin" />
                    <include name="validateShiftsWithConvertToOpenShiftsWhenCopyingScheduleSettingAsKeepAsUnassignedAsInternalAdmin" />
                    <include name="validateTheScheduleWithBothUnassignedAndOOOHShiftsAsInternalAdmin" />
                    <include name="validateOneShiftWhichHasBothUnassignedAndOOHViolationAsInternalAdmin" />
                    <!--                    <include name="validateThatIfAnEmployeeIsOnPTOLeaveOrTerminatedAsOfTheNewWeekTheShiftDayTimeShouldBeCopiedButWillBeUnassignedAsInternalAdmin" Blocked by SCH-4238/>-->
                    <include name="validateTheHierarchyPriorityOrderForAllSmartCardsAsInternalAdmin" />
                    <include name="validateShiftsWithConvertToOpenShiftsWhenGeneratingScheduleSettingAsExceptOpeningClosingShiftsAsInternalAdmin" />
                    <include name="validateShiftsWithConvertToOpenShiftsWhenCopyingScheduleSettingAsExceptOpeningClosingShiftsAsInternalAdmin" />
                    <include name="validateShiftsWithConvertToOpenShiftsWhenGeneratingScheduleSettingAsAllUnassignedShiftsAsInternalAdmin" />
                    <include name="validateShiftsWithConvertToOpenShiftsWhenCopyingScheduleSettingAsAllUnassignedShiftsAsInternalAdmin" />
                    <include name="validateTheOOOHShiftsAsInternalAdmin" />
                    <include name="validateThatIfEmployeeAvailabilityPreferenceIsSetToUnavailableOrHasViolationsTheScheduleShouldBeCopiedAsIsAsInternalAdmin" />
                    <include name="validateTheOperatingHoursGridWillAutomaticallyAdjustToFitFullRangeIfCopiedScheduleExtendOutsideTheOperatingHourAsInternalAdmin" />

                </methods>
            </class>
        </classes>
    </test>

    <test name="Delete Schedule Test">
        <classes>
            <class name="com.legion.tests.core.DeleteScheduleTest">
                <methods>
                    <include name="verifyDeletePublishedScheduleAsInternalAdmin" />
                    <include name="verifyDeleteUnPublishedScheduleAsInternalAdmin" />
                    <include name="verifySMCannotSeeDeleteButtonIfScheduleIsPublishedAsStoreManager" />
                    <include name="verifySMCannotSeeDeleteButtonIfScheduleIsNotPublishedAsInternalAdmin" />
                    <include name="verifySMCanPublishScheduleIfScheduleIsNotPublishedAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Schedule Test KendraScott2">
        <classes>
            <class name="com.legion.tests.core.ScheduleTestKendraScott2">
                <methods>
                    <include name="verifyTheBufferHoursDisplayInScheduleAsInternalAdmin"/>
                    <include name="verifySearchBarOnSchedulePageInWeekViewAsInternalAdmin" />
                    <include name="verifySearchBarOnSchedulePageInDayViewAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="TeamTab Test KendraScott2">
        <classes>
            <class name="com.legion.tests.core.TeamTestKendraScott2">
                <methods>
                    <include name="verifyAbilityToHideInviteButtonAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Location Navigation Test">
        <classes>
            <class name="com.legion.tests.core.LocationNavigationTest">
                <methods>
                    <include name="verifyShiftTypeContentInFilterWithoutLGAsInternalAdmin" />
                    <include name="verifySearchingAndSelectingTheLocationOnSMScheduleTabAsInternalAdmin" />
