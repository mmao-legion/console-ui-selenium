<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="no"/>

    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>


    <test name="Location Test">
        <classes>
            <class name="com.legion.tests.core.LocationsTest">
                <methods>
                    <include name="verifyCreateRegularLocationWithAllFieldsAndNavigate" />
                    <include name="verifyCreateMockLocationAndNavigate" />
                    <include name="verifyCreateNSOLocationAndNavigate" />
                    <include name="verifyDisableEnableLocationFunction" />
                    <include name="verifyCreateMSLocationGroupWithRegularTypeFunction" />
                    <include name="verifyCreateP2PLocationGroupWithRegularTypeFunction" />
                    <include name="verifyChangeNoneLocationToChild" />
                    <include name="verifyChangeNoneLocationToP2PParent" />
                    <include name="verifyChangeNoneLocationToMSParent" />
                    <include name="verifyCreateMSLocationGroupWithNSOTypeFunction" />
                    <include name="verifyCreateP2PLocationGroupWithNsoTypeFunction" />
                    <include name="verifySearchDistrictFunction" />
                    <include name="verifyAddOrUpdateDistrictFunction" />
                    <include name="verifyDisableEnableDistrictFunction" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Job Test">
        <classes>
            <class name="com.legion.tests.core.JobTest">
                <methods>
                    <include name="verifyJobSearchFunction" />
                    <include name="verifyCreateScheduleJobFunction" />
                </methods>
            </class>
        </classes>
    </test>
</suite> 
