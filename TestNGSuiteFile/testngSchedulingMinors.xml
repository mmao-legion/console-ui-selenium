<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="yes"/>
    <parameter name="testSuiteName" value="Scheduling Minors"/>
    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>

    <test name="Scheduling Minor Test">
        <classes>
            <class name="com.legion.tests.core.SchedulingMinorTest">
                <methods>
                    <include name="verifyEditMinorRulesAsInternalAdmin"/>
                    <include name="verifyNoWarningMessageAndViolationDisplayWhenMinorIsNotAvoidMinorSettingsAsInternalAdmin" />
                    <include name="verifyTheWarningMessageAndViolationWhenMinorShiftIsNotDuringTheSettingTimeAsInternalAdmin" />
                    <include name="verifyTheWarningMessageAndViolationWhenMinorShiftsExceedTheWeeklyHoursAsInternalAdmin" />
                    <include name="verifyTheWarningMessageAndViolationWhenMinorShiftDaysExceedTheWeekDaysInSettingAsInternalAdmin" />
                    <include name="verifyWarningMessageForExceedWeekdayHrsAsInternalAdmin"/>
                    <include name="verifyWarningMessageForExceedWeekendHrsAsInternalAdmin"/>
                    <include name="verifyTheWarningMessageAndViolationWhenMinorIsUnder14YearsOldAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

</suite>
