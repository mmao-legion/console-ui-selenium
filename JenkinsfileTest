pipeline {
   agent any
   stages{
    stage('Checkout') {
       steps{
        checkout scm
       }
    }
    stage('Run Tests') {
         steps{
         catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
            sh 'mvn clean test -Dsurefire.suiteXmlFiles=$xmlFileName -Denv=$env -Denterprise=$enterprise '
         }
     publishHTML([allowMissing: false, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'test-output/AutomationReport', reportFiles: 'htmlReporter.html', reportName: 'Automation_Report', reportTitles: 'Automation Result'])
        }
    }
}
}