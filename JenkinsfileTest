pipeline {
   agent any
   stages{
    stage('Checkout') {
       steps{
        checkout scm
       }
    }
    stage('Ops Portal') {
         steps{
         catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
            sh 'mvn clean -DsuiteXmlFiles=testng.xml'
         }
         publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: true, reportDir: 'test-output/', reportFiles: 'Ops_Portal.html', reportName: 'Ops_Portal', reportTitles: 'Ops_Portal General Tests'])
        }
    }

  }

  }