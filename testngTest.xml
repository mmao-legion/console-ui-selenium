<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="Yes"/>
    <parameter name="testRailRunName" value="Automation PR Code Check"/>

    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>

    <test name="Schedule Copy Test">
        <classes>
            <class name="com.legion.tests.core.ScheduleCopyTest">
                <methods>
                    <include name="verifyTheContentOnCreateSchedulePageInWeekViewAsInternalAdmin" />
                    <include name="verifyTheEnhancedCopyModalForNonDgFlowAsInternalAdmin" />
                    <include name="verifyTheFunctionalityOfCopyingASuggestedScheduleAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Delete Schedule Test">
        <classes>
            <class name="com.legion.tests.core.DeleteScheduleTest">
                <methods>
                    <include name="verifySMDeleteScheduleShouldKeepSystemScheduleWhenCentralizedScheduleReleaseIsYesAsInternalAdmin" />
                    <include name="verifyAdminDeleteScheduleShouldKeepSystemScheduleWhenCentralizedScheduleReleaseIsYesAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Controls New UI Test">
        <classes>
            <class name="com.legion.tests.core.ControlsNewUITest">
                <methods>
                    <include name="verifySmartCopyConfigsInNonOPNotWorkingAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>
</suite> 
