                    <include name="verifyShiftsCanBeDragAndDropSeveralTimesWithOutSaveAsInternalAdmin" />
                    <include name="verifyBulkDragAndDropByDifferentAccessRolesAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>
