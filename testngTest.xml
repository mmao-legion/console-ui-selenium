<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="no"/>
    <parameter name="testRailRunName" value="Automation Test Purpose"/>

    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>


    <test name="Dashboard Test">
        <classes>
            <class name="com.legion.tests.core.DashboardTestKendraScott2">
                <methods>
                    <include name="verifyDashboardFunctionalityAsTeamMember" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Activity Test">
        <classes>
            <class name="com.legion.tests.core.ActivityTest">
                <methods>
                    <include name="verifyNotificationForUpdateAvailabilityRepeatForwardWithConfYesAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Schedule Test">
        <classes>
            <class name="com.legion.tests.core.ScheduleTestKendraScott2">
                <methods>
                    <include name="verifyScheduleFunctionalityWeekViewAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Scheduling Minor Test">
        <classes>
            <class name="com.legion.tests.core.SchedulingMinorTest">
                <methods>
                    <include name="verifyWarningMessageForExceedWeekdayHrsAsInternalAdmin" />
                    <include name="verifyTheWarningMessageAndViolationWhenMinorShiftsExceedTheWeeklyHoursAsInternalAdmin" />
                    <include name="verifyTheWarningMessageAndViolationWhenMinorIsUnder14YearsOldAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Drag And Drop Test">
        <classes>
            <class name="com.legion.tests.core.DragAndDropTest">
                <methods>
                    <include name="verifyWarningModelForClopeningAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

</suite> 
