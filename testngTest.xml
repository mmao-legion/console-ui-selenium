<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="5" name="LegionTest" parallel="tests">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="Yes"/>
    <parameter name="testRailRunName" value="Automation Ephemeral Debug"/>

    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>


    <test name="P2P LG Test">
        <classes>
            <class name="com.legion.tests.core.P2PLGTest">
                <methods>
                    <include name="verifyEmployeeCanReceiveAndAcceptOffersForP2PLGAsTeamMember" />
                    <include name="verifyEmployeesCanSwapShiftsForP2PLGAsTeamMember" />
                    <include name="verifyEmployeesCanClaimCoverRequestForP2PLGAsTeamMember" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Parent Child LG Test">
        <classes>
            <class name="com.legion.tests.core.ParentChildLGTest">
                <methods>
                    <include name="verifyEmployeeCanReceiveAndAcceptOffersForParentChildLGAsTeamMember" />
                    <include name="verifyEmployeesCanSwapShiftsForParentChildLGAsTeamMember" />
                    <include name="verifyEmployeesCanClaimCoverRequestForParentChildLGAsTeamMember" />
                </methods>
            </class>
        </classes>
    </test>
</suite> 
