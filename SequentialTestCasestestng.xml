<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="5" name="LegionTest1" >
	<parameter name="environment" value="QA"/>
 
    <listeners>
 		<listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
 	</listeners>
   
  
 
  
  <test name="Schedule Overview Test">      
    <classes>
       <class name="com.legion.tests.core.ScheduleOverviewTest">
      	<methods>
           <include name="verifyCurrentWeekDateAndDayTest"/>
           <include name="verifyDateAndDayForEachWeeksUntilNotAvailableTest"/>
           <include name="verifyDayAndDateOnSchedulePageMatchesDayAndDateOnOverviewPageTest"/>
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  
  <test name="Schedule Test">      
    <classes>
       <class name="com.legion.tests.core.ScheduleTest">
      	<methods>
             <include name="hoursAndWagesCalculationOnSchedulePage"/>
             <include name="reviewPastGenerateCurrentAndFutureWeekSchedule"/> 
            
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  
  <test name="Staffing Guidance test">      
    <classes>
       <class name="com.legion.tests.core.StaffingGuidanceTest">
      	<methods>
           <include name="staffingGuidanceDataAsStoreManagerTest"/>
           <include name="weeklyGuidanceHoursShouldMatchTheSumOfEachDay"/>
          
        </methods>
      </class>
    </classes>
  </test>
  
 	
  <test name="Sales Forecast">      
    <classes>
       <class name="com.legion.tests.core.SalesForecastTest">
      	<methods>
           <include name="salesForecastDataAsStoreManagerTest"/>
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  
  <test name="Navigation Flow">      
    <classes>
       <class name="com.legion.tests.core.NavigationTest">
      	<methods>
           <include name="legionConsoleNavigationFlow"/>
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  
  
  <test name="Analytics Test">      
    <classes>
       <class name="com.legion.tests.core.AnalyticsTest">
      	<methods>
           <include name="gotoAnalyticsPageTest"/>
        </methods>
      </class>
    </classes>
  </test> <!-- Test -->
  
   
</suite> <!-- Suite -->

