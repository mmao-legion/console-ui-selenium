<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="5" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="yes"/>
    <parameter name="testRailRunName" value="Automation - Daily Routine - NonTA"/>
    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>

    <test name="DM View Test">
        <classes>
            <class name="com.legion.tests.core.DMViewTest">
                <methods>
                    <include name="verifyProjectedComplianceWidgetOnDashboardInDMViewAsInternalAdmin" />
                    <include name="verifySchedulePublishStatusWidgetOnDashboardInDMViewAsInternalAdmin" />
                    <include name="verifySchedulesGuidanceByDayWidgetOnDashboardInDMViewAsInternalAdmin" />
                    <include name="verifyLocationSummaryWidgetOnDashboardInDMViewOnNonTAEnvAsInternalAdmin" />
                    <!--<include name="verifyTheContentOfOpenShiftsForDMViewAsInternalAdmin" /> we don't have open shifts widget for now-->
                    <include name="verifyScheduleStatusAndHoursOnScheduleDMViewOnNonTAEnvAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Scheduling Minor Test">
        <classes>
            <class name="com.legion.tests.core.SchedulingMinorTest">
                <methods>
                    <include name="verifyWarningMessageForExceedWeekdayHrsAsInternalAdmin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Drag And Drop Test">
        <classes>
            <class name="com.legion.tests.core.DragAndDropTest">
                <methods>
                    <include name="verifySwapWarningModelForRoleViolationConfigNoAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Location Navigation Test">
        <classes>
            <class name="com.legion.tests.core.LocationNavigationTest">
                <methods>
                    <include name="verifyChangingLocationOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifySearchingAndSelectingTheLocationOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifyChangingDistrictOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifySearchingAndSelectingTheDistrictOnSMScheduleTabAsInternalAdmin" />

                                        <!-- Run on Legion Coffee -->
                    <include name="verifyChangingRegionOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifySearchingAndSelectingTheRegionOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifyChangingBusinessUnitOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifySearchingAndSelectingTheBusinessUnitOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifySelectingHQOnBusinessUnitScheduleTabAsInternalAdmin" />
                    <include name="verifySearchingAndSelectingTheHQOnSMScheduleTabAsInternalAdmin" />
                    <include name="verifySelectingDifferentLevelOfUpperFieldsAndLocationsOnHQScheduleTabAsInternalAdmin" />
                    <include name="verifySelectingDifferentLevelOfUpperFieldsAndLocationsOnHQComplianceTabAsInternalAdmin" />
                    <include name="verifySelectingDifferentLevelOfUpperFieldsOnSMComplianceTabAsInternalAdmin" />
                    <include name="verifySelectingDifferentLevelOfUpperFieldsAndLocationsOnHQReportTabAsInternalAdmin" />
                    <include name="verifySelectingDifferentLevelOfUpperFieldsOnLocationReportTabAsInternalAdmin" />
                    <include name="verifySelectingDifferentLevelOfUpperFieldsAndLocationsOnHQNewsTabAsStoreManager" />
                    <include name="verifySelectingDifferentLevelOfUpperFieldsOnLocationsNewsfeedPageAsStoreManager" />
                    <include name="verifyLocationNavigationShouldNotShowOnModerationPageAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Delete Schedule Test">
        <classes>
            <class name="com.legion.tests.core.DeleteScheduleTest">
                <methods>
                    <include name="verifySMCannotSeeDeleteButtonIfScheduleIsNotPublishedAsInternalAdmin" />
                    <include name="verifySMCanPublishScheduleIfScheduleIsNotPublishedAsInternalAdmin" />
                </methods>
            </class>
        </classes>
    </test>

</suite> <!-- Suite -->
