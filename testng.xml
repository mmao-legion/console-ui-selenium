<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="no"/>

    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>


    <test name="Location Test">
        <classes>
            <class name="com.legion.tests.core.LocationsTest">
                <methods>
                    <include name="verifyCreateUpdateRegularLocationWithMandatoryFields" />
                    <include name="verifyCreateUpdateRegularLocationWithAllFields" />
                    <include name="verifyCreateMockLocation" />
                    <include name="verifyCreateUpdateNSOLocation" />
                    <include name="verifyDisableEnableLocationFunction" />
                    <include name="verifyImportLocationDistrict" />
                    <include name="verifyExportLocationDistrict" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="Navigation Test">
        <classes>
            <class name="com.legion.tests.core.NewNavigationFlowTest">
                <methods>
                    <include name="verifyLocationProfilePageInControls" />
                    <include name="verifyManagerLocationForOneUserInControlsInControls" />
                    <include name="verifyLocationListFunctionInTimesheet" />
                </methods>
            </class>
        </classes>
    </test>

