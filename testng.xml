<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="no"/>

    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>

    <test name="Timesheet Test">
       <classes>
           <class name="com.legion.tests.core.DMScheduleTest">
               <methods>
                   <include name="validateDMViewDataWithSMViewAsInternalAdmin"/>
               </methods>
           </class>
       </classes>
   </test>

    <test name="Dashboard Test">
        <classes>
            <class name="com.legion.tests.core.DashboardTestKendraScott2">
                <methods>
                    <include name="verifyTheDisplayLocationWithSelectedLocation" />
                    <include name="verifyTheClickActionOnChangeLocationButton" />
                    <include name="verifyTheContentDisplayedInChangeLocationLayout" />
                    <include name="verifyTheFunctionOfSearchTextBox" />
                    <include name="verifyTheWelcomeMessage" />
                    <include name="verifyTheFunctionOfViewTodaySchedule" />
                    <include name="verifyTheDataSourceForBudgetScheduledOther" />
                </methods>
            </class>
        </classes>
    </test>
        <test name="Schedule Test">
            <classes>
                <class name="com.legion.tests.core.ScheduleTestKendraScott2">
                    <methods>
                        <include name="printButtonIsClickable" />
                        <include name="todoButtonIsClickable" />
                        <include name="closeButtonIsClickable" />
                        <include name="legionIsDisplayingTheScheduleWhichIsGeneratedByTheSystemAtTheVeryFirstTime" />
                        <include name="legionButtonIsClickableAndHasNoEditButton" />
                        <include name="CurrentWeekIsGettingOpenByDefault" />
                        <include name="DayWeekPickerSectionNavigatingCorrectly" />
                        <include name="LandscapePortraitModeShowAndWorkWellInWeekView" />
                    </methods>
                </class>
            </classes>
        </test>


    <test name="TeamTab Test">
       <classes>
           <class name="com.legion.tests.core.TeamTestKendraScott2">
               <methods>
                   <include name="verifyTheFunctionOfSearchTMBar"/>
                   <include name="verifyTheFunctionOfPlusIcon" />
                   <include name="verifyTheCalendarLoadForCurrentDayAndColor" />
                   <include name="verifyNewHomeLocationCanBeSelectedOnTransfer" />
                   <include name="verifyTheFunctionOfTemporaryTransferButton" />
                   <include name="verifyTwoCalendarsAreShownAfterClickTemp" />
                   <include name="verifyTheFunctionOfAddTMCalendar" />
                   <include name="verifyTheCurrentDateAndSelectOtherDateOnTransfer" />
                   <include name="verifyTransferToANewLocation" />
                   <include name="verifyConfirmButtonOnPopupWindowWorking" />
                   <include name="verifyCancelButtonOnPopupWindowWorking" />
                   <include name="verifyHomeLocationNotUpdateAndGivenInformation" />
                   <include name="verifyPopupIsShownAfterClickingCancelTransfer" />
                   <include name="verifyTransferButtonEnabledAfterCancelingTransfer" />
                   <include name="verifyHomeLocationAfterCancelingTransfer" />
                   <include name="verifyTheFunctionOfBadges" />
                   <include name="verifyTheVisibleOfBadgesOnTeamRoster" />
                   <include name="verifyTheEmailDomainOnInvite" />
                   <include name="verifyInviteTeamMemberPageLoaded" />
                   <include name="verifySendAndCancelEnabledOnInvite" />
                   <include name="verifyThreeTitlesDisplayedOnInvite" />
                   <include name="verifySaveButtonEnableOnNewTMPage" />
                   <include name="verifyTMContactNumberInNumericOnly" />
                   <include name="verifyTMCountIsCorrectFromRoster" />
                   <include name="verifyCancelButtonEnabledOnAddTM" />
                   <include name="verifyMandatoryFieldsOnAddTM" />
                   <include name="verifyTMIsInvitedAndVisibleOnTODO" />
                   <include name="verifyInviteAndReInviteAreAvailable" />
               </methods>
           </class>
       </classes>
   </test>

</suite> <!-- Suite -->

