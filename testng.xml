<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
	<parameter name="environment" value="QA"/>
    <parameter name="platform" value="Android11"/>
    <parameter name="executionon" value="realdevice"/>
    <parameter name="runMode" value="mobileAndWeb"/>


    <listeners>
 		<listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
 	</listeners>

  <test name="Controls New UI Test">
        <classes>
            <class name="com.legion.tests.core.ControlsNewUITest">
      	        <methods>
                    <include name="updateUserLocationAsInternalAdmin"/>
                    <include name="updateWorkingHoursAsInternalAdmin"/>
                    <include name="verifyBudgetSmartcardEnableOrDisableFromSchedulingPoliciesAsInternalAdmin"/>
                    <include name="verifySchedulePlanningWindowAndAdditionalScheduleHoursAsInternalAdmin"/>
                    <include name="updateControlsSectionLoadingAsStoreManager"/>
                    <include name="updateAndValidateShiftIntervalTimeAsInternalAdmin"/>
                    <include name="validateScheduleFinalizeFunctionalityAsInternalAdmin"/>
                    <include name="updateAndValidateSchedulingPoliciesAllFieldsAsInternalAdmin"/>
                </methods>
            </class>
        </classes>
    </test>


  
</suite>



