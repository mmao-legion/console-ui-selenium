<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite verbose ="0" thread-count="10" name="LegionTest">
    <parameter name="environment" value="QA"/>
    <parameter name="testRail" value="no"/>


    <listeners>
        <listener class-name="com.legion.tests.testframework.LegionTestListener"></listener>
    </listeners>

    <test name="Timesheet Test">
       <classes>
           <class name="com.legion.tests.core.DMScheduleTest">
               <methods>
                   <include name="validateDMViewDataWithSMViewAsInternalAdmin"/>
               </methods>
           </class>
       </classes>
   </test>

    <test name="Dashboard Test">
        <classes>
            <class name="com.legion.tests.core.DashboardTestKendraScott2">
                <methods>
                    <include name="verifyTheDisplayLocationWithSelectedLocation" />
                    <include name="verifyTheClickActionOnChangeLocationButton" />
                    <include name="verifyTheContentDisplayedInChangeLocationLayout" />
                    <include name="verifyTheFunctionOfSearchTextBox" />
                </methods>
            </class>
        </classes>
    </test>
        <test name="Schedule Test">
            <classes>
                <class name="com.legion.tests.core.ScheduleTestKendraScott2">
                    <methods>
                        <include name="printButtonIsClickable" />
                        <include name="todoButtonIsClickable" />
                        <include name="closeButtonIsClickable" />
                        <include name="legionIsDisplayingTheScheduleWhichIsGeneratedByTheSystemAtTheVeryFirstTime" />
                        <include name="legionButtonIsClickableAndHasNoEditButton" />
                        <include name="CurrentWeekIsGettingOpenByDefault" />
                        <include name="DayWeekPickerSectionNavigatingCorrectly" />
                        <include name="LandscapePortraitModeShowAndWorkWellInWeekView" />
                    </methods>
                </class>
            </classes>
        </test>

</suite> <!-- Suite -->

